<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="">

    <TextView
        android:id="@+id/tvBarbearia1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:background="#FFFFFF"
        android:text="Barbearia ZÃ© Barberius"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/barb1" />

    <TextView
        android:id="@+id/tvMorada"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvBarbearia1"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:text="Morada:"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvrua"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMorada"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:text="Rua do teste"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvContacto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvrua"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:text="Contacto:"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvnumero"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvContacto"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:text="912345678"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/gps1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvnumero"
        app:srcCompat="@drawable/barb1" />

</RelativeLayout>