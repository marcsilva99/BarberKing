<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#782B2B"
    tools:context=".ProfileActivity">

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif"
            android:text="Perfil"
            android:textAlignment="center"
            android:textColor="#C8C8C8"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:drawableStart="@drawable/ic_email"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etCell"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:drawableStart="@drawable/ic_phone"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etPasswordNova"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCell"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_password"
            android:hint="Password Nova"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etCPasswordNova"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordNova"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_password"
            android:hint="Confirmar Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="gone" />


        <Button
            android:id="@+id/btEditar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCPasswordNova"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Editar"
            android:textColor="#C8C8C8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btSubmeter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCPasswordNova"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Submeter"
            android:textColor="#C8C8C8"
            android:textSize="18sp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/btLogout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btSubmeter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Logout"
            android:textColor="#C8C8C8"
            android:textSize="18sp" />

</RelativeLayout>