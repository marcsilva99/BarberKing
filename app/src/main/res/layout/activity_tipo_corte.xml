<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#782B2B"
    tools:context=".MainnActivity">


    <FrameLayout

        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="200dp"
            android:layout_marginStart="75dp"

            app:srcCompat="@drawable/manequim5" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="200dp"
            android:layout_marginEnd="75dp"
            android:clickable="true"

            app:srcCompat="@drawable/manequim" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="350dp"
            android:layout_marginStart="75dp"
            android:clickable="true"

            app:srcCompat="@drawable/manequim3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="350dp"
            android:layout_marginEnd="75dp"
            android:clickable="true"
            app:srcCompat="@drawable/manequim4" />

        <TextView
            android:id="@+id/tvBarbearia1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Escolha o seu tipo de corte"
            android:textAlignment="center"
            android:textColor="#C8C8C8"
            android:textSize="26dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btLogin"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="550sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Escolher"
            android:textColor="#C8C8C8" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>