<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".fragments.ProfileFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            android:text="Perfil"
            android:textAlignment="center"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_email"
            android:inputType="text"
            android:maxLines="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etTelemovel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEmail"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_phone"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etPasswordNova"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etTelemovel"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_password"
            android:hint="Password Nova"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etCPasswordNova"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPasswordNova"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_password"
            android:hint="Confirmar Password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvLinguasFaladas"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCPasswordNova"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:text="Linguas Faladas"
            android:textAlignment="center"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLinguasFaladas"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:text="Português" />

        <CheckBox
            android:id="@+id/cbEN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbPT"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:text="Inglês" />

        <Button
            android:id="@+id/btEditar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbEN"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Editar"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btSubmeter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbEN"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#807373"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Submeter"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/btLogout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btSubmeter"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>